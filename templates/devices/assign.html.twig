{% extends 'base.html.twig' %}

{% block title %}Add new user{% endblock %}

{% block content %}

    <div class="container">

        <div class="row">
            <h1>Current device</h1>
        </div>
        <div class="row">
            <div class="col-4"> {{ device.type }}</div>
            <div class="col-4"> {{ device.name }}</div>
            <div class="col-4"> {{ device.description }}</div>
        </div>

        <div class="row">
            Assign device to:
        </div>

        <div class="row">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>

    </div>

{% endblock %}
